<h1>Adminlogin</h1>
<form class="login" action="usercontroller.php?action=adminlogin" method="POST">
    <label for="naam" value="naam"><input name="naam" type="naam" placeholder="naam"> 
    </label>
    <label for="password" value="password">
        <input name="password" type="password" placeholder="password"> 
    </label>
    <input name="login" type="submit" value="login"> 
</form>
    {% if error is defined %}
<div class="error">
            {% if error=='UserNietGevonden' %}
    <p>Deze naam is niet geregistreerd</p>
                {% elseif error== 'GeenNaamOpgegeven'%}
    <p>U hebt geen naam opgegeven</p>
            {% elseif error=='GeenPasswordOpgegeven' %}
    <p>U hebt geen paswoord opgegeven</p>
            {% elseif error=='IncorrectPassword' %}
    <p>U hebt een verkeerd paswoord opgegeven</p>
            {% endif %}
</div>
    {% endif%}{# empty Twig template #}
